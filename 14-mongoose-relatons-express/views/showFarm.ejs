<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1><%= farm.name %> </h1>
    <ul>
        <li><%= farm.city %> </li>
        <li><%= farm.email %> </li>
    </ul>
    
    <h1>All Products</h1>
    <ul>
        <% farm.products.forEach(product => { %>
         <li><a href="/products/<%= product._id %>"><%= product.name %></a></li>
        <% }) %>
    </ul>
    <a href="/farms">All Farms</a>
    <a href="/farm/<%= farm._id %>/product/add ">Add Product</a>
    <form action="/farm/<%= farm._id %>/delete?_method=DELETE" method="POST">
        <button>Delete</button>
    </form>
</body>
</html>